<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
       Transparent
       This creates a completely transparent activity, Your animation or
       text will be shown directly on the phone background. This could
       hamper visibility depending on the user background.
    -->
    <!--
       Transparent2
       <item name="android:windowNoTitle">true</item>
       <item name="android:windowActionBar">false</item>
       this leaves a transparent opening above the splashscreen (the
       area where you can usually see the time and the wifi quality).
       You should switch both boolean values to counter that (see Transparent3)
    -->
    <!--
       Transparent3
       Use this for a splashscreen. The title and actionbar are
       still there but that's what you want here
    -->

    <!--
       Transparent4
       <item name="android:windowIsTranslucent">false</item>
       This will make the screen flicker and should be set to true
    -->
    <style name="Theme.Transparent4" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>


</resources>